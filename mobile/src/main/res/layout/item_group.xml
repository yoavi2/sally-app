<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@drawable/ripple_selector">
    <ImageView
            android:id="@+id/item_group_imageGroup"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_toEndOf="@+id/item_group_imageGroup"
            android:id="@+id/linearLayout">
        <TextView
                android:id="@+id/item_group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="Test name"
                style="@style/Base.TextAppearance.AppCompat.Subhead"/>

        <TextView
                android:id="@+id/item_group_members"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="Test profession"/>
    </LinearLayout>

    <ImageButton
            android:id="@+id/item_group_play"
            android:visibility="gone"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_play_arrow_black_32dp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:layout_marginEnd="8dp"
            android:layout_alignParentEnd="true"/>

    <View style="@style/Divider_light"
          android:padding="1dp"
          android:layout_gravity="bottom"
          android:layout_alignParentBottom="true" />

</RelativeLayout>